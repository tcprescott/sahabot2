# Example Kubernetes Secrets Configuration
# This file shows the structure of environment variables needed for Kubernetes deployment
# In practice, these are configured in k8s/secrets.yaml and injected into the container

# Database Configuration
DB_HOST=mysql-service.sahabot2.svc.cluster.local
DB_PORT=3306
DB_USER=sahabot2
DB_PASSWORD=your_secure_password_here
DB_NAME=sahabot2

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://your-domain.com/auth/callback
DISCORD_GUILD_ID=your_guild_id_optional

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Racetime.gg Configuration (optional)
# Format: category:client_id:secret,category:client_id:secret,...
RACETIME_BOTS=

# Application Configuration
SECRET_KEY=your_long_random_secret_key_for_sessions
ENVIRONMENT=production
DEBUG=False
BASE_URL=https://your-domain.com

# Server Configuration
HOST=0.0.0.0
PORT=8080
